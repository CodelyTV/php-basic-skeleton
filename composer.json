{
  "name": "codelytv/php-bootstrap",
  "description": "Starting point if you want to bootstrap a project in PHP following best practices.",
  "type": "project",
  "keywords": ["bootstrap", "skeleton", "kata", "TDD", "boilerplate"],
  "homepage": "https://codely.com",
  "license": "MIT",
  "authors": [
    {
      "name": "CodelyTV",
      "homepage": "https://codely.com"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "codelytv/coding-style": "^1.2",
    "vimeo/psalm": "^5.24"
  },
  "autoload": {
    "psr-4": {
      "CodelyTv\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CodelyTv\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "lint": "ecs check",
    "lint:fix": "ecs check --fix",
    "static-analysis": "psalm"
  }
}
